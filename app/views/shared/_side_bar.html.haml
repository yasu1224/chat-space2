.side_bar
  .side_bar__user--name
    .side_bar__user--name__box
      %h3.side_bar__box__name 
        = current_user.name
      %ul.side_bar__user--name__box__menu
        %li.side_bar__new-group
          = link_to new_group_path do
            = icon('fa','edit')
        %li.side_bar__edit-user
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon')
  .side_bar__group
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          %p.side_bar__group__group-name
            = group.name
          %p.side_bar__group__new-message
            = group.show_last_message